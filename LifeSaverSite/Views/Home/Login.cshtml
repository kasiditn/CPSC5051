@{
    ViewBag.Title = "LoginPage";
}

<body style="background-image: url( ~/Content/Img/ComputerKeyboard-2.jpg); background-repeat:no-repeat; background-size:cover">


    <div class="container">
        <div class="row">
            <div class="col-sm-6 ">

            </div>
            <div class="col-sm-6 ">
                <div class="row-flex-justify-content-center align-items-center h-100">
                    <div class="text-center">
                        <h1>Login</h1>
                    </div>

                    <div class="col-md-auto">
                        <div class="form-group">
                            <div class="align-items-center">
                                <label for="email">Email address:</label>
                                <input type="email" class="form-control" id="email">
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="pwd">Password:</label>
                            <input type="password" class="form-control" id="pwd">
                        </div>
                        <div class="form-group form-check ">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox"> Remember me
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <span> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;</span>
                    </div>
                </div>
            </div>
        </div>
    </div>




</body>
