
@{
    ViewBag.Title = "Image";
}

<div class="jumbotron">
    <h1>Image</h1>
    <p>Select your image by entering the patientID:</p>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="form-check-inline">
                <label for="patientId">Patient ID: </label>
                <input type="text" class="form-control" id="patientId" />
            </div>
        </div>
        <div class="col">
                <div class="btn btn-lg btn-block">
                    <button type="submit">Search</button>
                </div>
         </div>
    </div>
    <div class="row" style="margin-bottom:20px;">
        <div class="col" style="width:900px; margin-top:20px;">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img class="d-block w-100 CarouselImage" src="~/Content/Img/yellowbox.JPG" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 CarouselImage" src="~/Content/Img/orangebox.JPG" alt="Second slide">
                    </div>
                   @* <div class="carousel-item">
                        <img class="d-block w-100 CarouselImage" src="~/Content/Img/bluebox.JPG" alt="Third slide">
                    </div>*@
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col" style="margin-top:40px;">
            <p class="text-warning">Phone ID: 001 </p>
            <p class="text-warning">Time: 12:53pm</p>
            <p class="text-warning">Date: 05/14/2019</p>
            <p class="text-warning">Location: Clinic A, Lagos</p>
            <p class="text-warning">Phone Brand: Huawei P30 pro</p>
            <p class="text-warning">Phone OS: Android KitKat</p>
        </div>
    </div>
</div>





