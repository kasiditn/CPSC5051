
@{
    ViewBag.Title = "Image";
}

<h2>Image</h2>
<p></p>
<p></p>
<p></p>
<p></p>
<p>Select your image by entering the patientID:</p>

<input type="file" class="form-control-file border">

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      
        <div class="carousel-item active">
            <img class="d-block w-100 CarouselImage" src="~/Content/Img/bluebox.JPG" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 CarouselImage" src="~/Content/Img/yellowbox.JPG" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 CarouselImage" src="~/Content/Img/orangebox.JPG" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>






